    <!------- end navbar-->
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col text-left text-uppercase">
                    &copy; 2021 -جميع الحقوق محفوظه
